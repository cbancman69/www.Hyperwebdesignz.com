# Example environment variables for local development
# Copy to .env and update values before running the server

# Admin secret used for /admin login (change this before deploying)
ADMIN_SECRET=change-this-secret

# Server port (optional)
PORT=4000

# SMTP for contact form notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFY_EMAIL=

# Twilio for SMS notifications (optional)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
NOTIFY_PHONE=

# Google Analytics (consent-gated)
# Set either GA_MEASUREMENT_ID or PLAUSIBLE_DOMAIN (cookie-consent auto mode will prefer GA)
GA_MEASUREMENT_ID=G-XXXXXXX
PLAUSIBLE_DOMAIN=example.com
